{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "diagnostics": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react-native",
    "lib": ["es2020"],
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "./dist",
    "strict": true,
    "target": "ES2020",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@enums/*": ["src/enums/*"],
      "@constants/*": ["src/constants/*"],
      "@hooks/*": ["src/hooks/*"],
      "@localization/*": ["src/localization/*"],
      "@store/*": ["src/store/*"],
      "@auth/*": ["src/auth/*"]
    }
  },
  "exclude": ["node_modules", "metro.config.js", "jest.config.js", "dist"]
}
